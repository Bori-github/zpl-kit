{
  "name": "zpl-kit",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter './apps/*' --filter './demos/*' dev",
    "build": "pnpm --filter './apps/*' --filter './demos/*' build",
    "test": "vitest",
    "lint": "oxlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build"
  },
  "devDependencies": {
    "rolldown": "^1.0.0-beta.51",
    "oxlint": "^0.15.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
